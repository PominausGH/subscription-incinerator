# ===========================================
# Subscription Incinerator - Production Environment
# Copy to .env and fill in your values
# ===========================================

# Database
POSTGRES_USER=subscription
POSTGRES_PASSWORD=   # Generate: openssl rand -base64 24
POSTGRES_DB=subscription_incinerator

# Web Port (optional, default 3000)
WEB_PORT=3000

# NextAuth
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=     # Generate: openssl rand -base64 32

# Encryption (for OAuth tokens)
ENCRYPTION_SECRET=   # Generate: openssl rand -base64 32

# Resend (Email)
RESEND_API_KEY=re_xxxxx

# Gmail OAuth
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=https://your-domain.com/api/oauth/gmail/callback

# Anthropic (AI CSV parsing)
ANTHROPIC_API_KEY=sk-ant-xxxxx

# Stripe
STRIPE_SECRET_KEY=sk_live_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx
STRIPE_PRICE_ID=price_xxxxx

# Public URLs
NEXT_PUBLIC_APP_URL=https://your-domain.com

# Push Notifications
# Generate with: npx web-push generate-vapid-keys
NEXT_PUBLIC_VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
